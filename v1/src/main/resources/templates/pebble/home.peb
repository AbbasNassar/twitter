    <script>
              document.addEventListener("DOMContentLoaded", () => {
                const buttons = document.querySelectorAll(".navButton");
                const homeButton = document.getElementById("homeButton");

                const homeSelectedSvg =
                  homeButton.querySelector("svg:nth-of-type(1)");
                const hideSvg = homeButton.querySelector("svg:nth-of-type(2)");

                homeSelectedSvg.id = `homeSelectedSvg-${Date.now()}`;
                hideSvg.id = `hideSvg-${Date.now()}`;

                homeSelectedSvg.style.display = "block";
                hideSvg.style.display = "none";
                const homeSpan = homeButton.querySelector("span");
                if (homeSpan) {
                  homeSpan.style.fontWeight = "800";
                }

                buttons.forEach((button) => {
                  button.addEventListener("click", () => {
                    buttons.forEach((btn) => {
                      const span = btn.querySelector("span");
                      if (span) span.style.fontWeight = "400";
                    });

                    // Highlight the clicked button
                    const span = button.querySelector("span");
                    if (span) span.style.fontWeight = "800";

                    // Show/hide SVGs for the home button
                    if (button === homeButton) {
                      homeSelectedSvg.style.display = "block";
                      hideSvg.style.display = "none";
                    } else {
                      homeSelectedSvg.style.display = "none";
                      hideSvg.style.display = "block";
                    }
                  });
                });
              });
            </script>
