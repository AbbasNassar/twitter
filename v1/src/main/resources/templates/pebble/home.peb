        if (homeSpan) {
          homeSpan.style.fontWeight = "800";
        }

        function setBodyHeight(sizeDepends) {
          if (sizeDepends) {
            body.style.height = `${sizeDepends.offsetHeight}px`;
          }
        }

        setBodyHeight(homePage);

        window.addEventListener("resize", setBodyHeight);

        buttons.forEach((button) => {
          button.addEventListener("click", () => {
            buttons.forEach((btn) => {
              const span = btn.querySelector("span");
              if (span) span.style.fontWeight = "400";
            });

            // Highlight the clicked button
            const span = button.querySelector("span");
            if (span) span.style.fontWeight = "800";

            // Show/hide SVGs for the home button
            if (button === homeButton) {
              homeSelectedSvg.style.display = "block";
              return
              hideSvg.style.display = "none";
              homePage.style.display = "flex";
              profilePage.style.display = "none";
              setBodyHeight(middleDiv);
              window.addEventListener("resize", setBodyHeight);
            } else if (button === profileButton) {
              setBodyHeight(profilePage);
              window.addEventListener("resize", setBodyHeight);
            } else {
              homeSelectedSvg.style.display = "none";
              hideSvg.style.display = "block";
            }
          });
        });
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const middleDiv = document.querySelector(".middle");
        const body = document.body;

        function setBodyHeight() {
          if (middleDiv) {
            body.style.height = `${middleDiv.offsetHeight}px`;
          }
        }
        setBodyHeight();
        window.addEventListener("resize", setBodyHeight);
      });
    </script>
  </body>
</html>
