<div class="form-floating mb-3 black-theme" hx-target="this" hx-swap="outerHTML">
    <input type="password" class="form-control" id="passwordInput" name="password" 
        placeholder="Password" hx-post="/users/password" value="{{ password }}">
    <label for="passwordInput" class="up-form-desc">Password</label>
    <div id="passwordStrength" class="form-text {{ cssClass }}">{{ message }} {{ strength }}</div>
</div>